{
  "name": "incident-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-incidents": "cds watch --open launchpage.html#Shell-home  --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/incidents"
  ],
  "cds": {
    "requires": {
          "[development]": {
      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "ID": "alice",
            "roles": ["support", "admin"]
          },
          "support": {
            "roles": ["support"]
          },
          "admin": {
            "roles": ["admin"]
          }
        }
      }
    },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true
    }
  }
}
